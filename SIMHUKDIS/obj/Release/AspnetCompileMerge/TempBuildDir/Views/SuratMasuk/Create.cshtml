    function HideBox()
    {        
        $("#DokumenisLampiranSurat6").hide();
        $("#LampiranSP").hide();
        $("#LampiranBAP").hide();
        $("#LampiranSTP").hide();
        $("#LampiranSPanggilan").hide();
        $("#Lainnya").hide();
        $("#LampiranSuratPP").hide();
        $("#LampiranSurat6").prop('disabled', true);
        $("#LHA").hide();
    }
    function Satker(SatuanKerja)
    {        
        if (SatuanKerja == 143) {
            $("#KODE_SATUAN_KERJA").prop('disabled', false);
            $("#LampiranBAP").show();
            $("#LHA").show();
            $("#Lainnya").show();
            $("#LampiranSurat_LHA").prop('required', true);
            $("#LampiranSurat2").prop('required', true);
            $("#LampiranSurat5").prop('required', true);
            $("#DokumenisLampiranSurat6").show();
            $("#LampiranSuratPP").show();
            var x = document.getElementById('DokLainnya');
            x.style.color = "cornflowerblue";
            x.style.fontWeight  = "Bold";
            document.getElementById('DokLainnya').innerHTML = 'Lampiran Surat Tugas/Dokumen Pendukung Lainnya';
            var y = document.getElementById('DokBAP');
            y.style.color = "cornflowerblue";
            y.style.fontWeight = "Bold";
        }
        else
        {            
            $("#KODE_SATUAN_KERJA").prop('disabled', true);
            $("#DokumenisLampiranSurat6").show();
            $("#LampiranSP").show();
            $("#LampiranBAP").show();
            $("#LampiranSTP").show();
            $("#LampiranSPanggilan").show();
            $("#Lainnya").show();
            $("#LampiranSuratPP").show();
            $("#LampiranSurat6").prop('disabled', true);
            $("#LHA").hide();
            $("#LampiranSurat_LHA").prop('required', false);
            var x = document.getElementById('DokLainnya');
            document.getElementById('DokLainnya').innerHTML = 'Lampiran Dokumen Pendukung Lainnya';
            var y = document.getElementById('DokBAP');
            y.style.color = "cornflowerblue";
            y.style.fontWeight = "Bold";
        }
    }
    function LampiranPP()
    {
        if ($(isLampiranSurat6).val() == 1) {
            $("#LampiranSurat6").prop('disabled', false);
            $("#LampiranSurat6").prop('required', true);
        }
        else
        {
            $("#LampiranSurat6").prop('disabled', true);
            $("#LampiranSurat6").prop('required', false);
        }
    }
</script>
