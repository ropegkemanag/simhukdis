            TEMPAT_LAHIR: $('#TEMPAT_LAHIR').val(),
            TANGGAL_LAHIR: $('#TANGGAL_LAHIR').val(),
            MASAKERJA_TAHUN: $('#MASAKERJA_TAHUN').val(),
            TANGGAL_LAHIR: $('#TANGGAL_LAHIR').val(),
            TMT_PENSIUN: $('#TMT_PENSIUN').val(),
            DasarBukti: $('#DasarBukti').val(),
            PelanggaranDisiplin: $('#PelanggaranDisiplin').val(),
            PasalPelanggaran: $('#PasalPelanggaran').val(),
            RekomendasiHukdis: $('#RekomendasiHukdis').val(),
            AnalisaPertimbangan: $('#AnalisaPertimbangan').val(),
            KeputusanSidangDPK: $('#KeputusanSidangDPK').val(),
            Tanggal_Telaah: $('#Tanggal_Telaah').val()
        };
        $.ajax({
            url: "/Telaah/GenerateWord",
            data: JSON.stringify(dpObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {

                DownloadPDF(result.DocPDF, result.DocWord);
                //DownloadPDF(result.DocWord);
                if (result.Msg.toString() == "Success") {
                    Swal.fire({
                        icon: 'success',
                        title: 'Telaah berhasil !',
                        showConfirmButton: false,
                        timer: 3000
                    })
                    
                }
                else {
                    Swal.fire({
                        icon: 'error',
                        title: result.Msg.toString(),
                        showConfirmButton: false,
                        timer: 3000
                    })
                }
                
            },
            error: function (errormessage) {
                Swal.fire({
                    icon: 'error',
                    title: result.toString(),
                    showConfirmButton: false,
                    timer: 3000
                })
                window.location.href = '@Url.Action("Details2", "Telaah")?ID=' + InputID;
            }
        });
    }
