<script type="text/javascript">
    function Proses(ID, NIP) {
        $('#ID').val(ID);
        $('#NIPx').val(NIP);
        $('#MajukanKeAtasan').modal('show');
    }
    function ProsesPraSidang(ID, NIP) {
        $('#ID').val(ID);
        $('#NIPx').val(NIP);
        $('#ProsesPraDPK').modal('show');
    }
    function PraDPK() {
        var InputID = '@ViewBag.ID';
        var fileUpload = $("#FileTelaah1").get(0);
        var files = fileUpload.files;

        // Create FormData object
        var fileData = new FormData();

        // Looping over all files and add it to FormData object
        for (var i = 0; i < files.length; i++) {
            fileData.append(files[i].name, files[i]);
        }
        $.ajax({
            url: '/Telaah/UploadFiles',
            type: "POST",
            contentType: false, // Not to set any content header
            processData: false, // Not to process data
            data: fileData,
            success: function (result) {
                var dpObj = {
                    ID: $('#ID').val(),
                    NIP: $('#NIPx').val(),
                    FileTelaah: result
                };
                $.ajax({
                    url: "/Telaah/PraDPK",
                    data: JSON.stringify(dpObj),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result.toString() == "Success") {
                            Swal.fire({
                                icon: 'success',
                                title: 'Proses berhasil !',
                                showConfirmButton: false,
                                timer: 3000
                            })
                            window.location.href = '@Url.Action("Details2", "Telaah")?ID=' + $("#ID").val();
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: result.toString(),
                                showConfirmButton: false,
                                timer: 3000
                            })
                        }
                    },
                    error: function (errormessage) {
                        Swal.fire({
                            icon: 'error',
                            title: result.toString(),
                            showConfirmButton: false,
                            timer: 3000
                        })
                    }
                });
            },
            error: function (err) {
                Swal.fire({
