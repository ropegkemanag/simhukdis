</div>

<div class="modal fade" id="ProsesPraDPK" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Proses Pra Sidang DPK</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="modal-body" style="margin-left:20px;">
                    <form id="Form" >
                        <div class="form-group row" style="display:none;">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">ID</label>
                                @Html.TextBox("ID", "", new { @id = "ID", @class = "form-control form-control-user", required = "required" })
                                @Html.ValidationMessage("ID", "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">NIP</label>
                                @Html.TextBox("NIP", "", new {@id = "NIPx", @class = "form-control form-control-user", required = "required" })
                                @Html.ValidationMessage("NIP", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">File Telaah</label>
                                @Html.TextBox("FileTelaah", "", new { @id = "FileTelaah", @class = "form-control form-control-user", required = "required" , accept = "application/pdf", Type="file" })
                                @Html.ValidationMessage("FileTelaah", "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    <input type="submit" value="Proses" class="btn btn-primary" style="width:100px;" onclick="UploadTelaah()"/>
                </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function Proses(ID, NIP) {
        $('#ID').val(ID);
        $('#NIPx').val(NIP);
        $('#ProsesPraDPK').modal('show');
    }
    function UploadTelaah() {
        var InputID = '@ViewBag.ID';
        var fileUpload = $("#FileTelaah").get(0);
        var files = fileUpload.files;

        // Create FormData object  
        var fileData = new FormData();

        // Looping over all files and add it to FormData object  
        for (var i = 0; i < files.length; i++) {
            fileData.append(files[i].name, files[i]);
        }
        $.ajax({
            url: '/Telaah/UploadFiles',
            type: "POST",
            contentType: false, // Not to set any content header  
            processData: false, // Not to process data  
            data: fileData,
            success: function (result) {
                var dpObj = {
                    ID: $('#ID').val(),
                    NIP: $('#NIPx').val(),
                    FileTelaah: result
                };
                $.ajax({
                    url: "/Telaah/Proses",
                    data: JSON.stringify(dpObj),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result.toString() == "Success") {
                            Swal.fire({
                                icon: 'success',
                                title: 'Proses berhasil !',
                                showConfirmButton: false,
                                timer: 3000
                            })
                            window.location.href = '@Url.Action("Details2", "Telaah")?ID=' + $("#ID").val();
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: result.toString(),
                                showConfirmButton: false,
                                timer: 3000
                            })
                        }
                    },
                    error: function (errormessage) {
                        Swal.fire({
                            icon: 'error',
                            title: result.toString(),
                            showConfirmButton: false,
                            timer: 3000
                        })
                    }
                });
            },
            error: function (err) {
                Swal.fire({
                    icon: 'error',
                    title: result.toString(),
                    showConfirmButton: false,
                    timer: 3000
                })
            }
        });
    }
